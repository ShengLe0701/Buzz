    justify-content: space-around
    min-height: 375px
    max-width: 1100px
    margin: 0 auto
    margin-top: 150px
    background-color: #fff
    box-sizing: border-box;
    padding: 5px 55px
    color:#333333
    .autor-info-holder
      display: flex;
      width: 100%
      margin-top: 35px
      .autor-info
        width: 100%
        display: flex
        margin-left: 2px
        .info
          display: flex
          width: 85%
          flex-direction: column
          justify-content: center
          .name-info
            color:#F14A08;
            font-weight:bold;
            font-size:20px;    
