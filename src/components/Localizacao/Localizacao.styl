.Localizacao
  position:absolute;
  left:0;
  right:0;
  top:0;
  width:100vw;
  height:100vh;
  z-index: 2000
  background-image: url(../../images/minalocalizacao.jpg);
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  .content-holder
    margin-top:0px;
    max-width:100%;
    float:left;
    width:100%;
    height:100%;
    position:relative;
  .logo-img
    position: absolute
    left: 0
    right: 0
    top: 36px
    margin:0 auto
  .frases-holder
    margin-bottom: 20px;
    .frase
      font-size: 1.8em
      font-weight: 300
      padding:0;
      margin:0;
      &:first-child
        font-weight: 500
        font-size: 2.5em

  .frase-dia
    padding-bottom:0;
  .Header
    display:none;
  .select-id
    color:white
    height: 100%
    text-align: center
    display: flex
    flex-direction: column;
    justify-content: center;
  @media screen and (max-width:522px)
    .select-id
      margin-left:15%
      margin-top:5%
  @media screen and (max-width:522px)
    .localiza
      background-repeat:no-repeat no-repeat;
      background-position: right !important;
      background-size: cover !important;
