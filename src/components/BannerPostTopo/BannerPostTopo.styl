.BannerPostTopo
  display: flex;
  flex-direction: column;
  height: auto
  box-sizing: border-box;
  color: #fff;
  width: 100%
  top: 0
  left: 0
  max-width: 1100px
  margin: 0 auto

  .anuncio-image
    background-position: center!important;
    background-size: cover!important;
    width: 100%
    height: 100%
    min-height: 275px
    cursor: pointer;

  @media screen and (max-width: 800px)
    .anuncio-image
      display: none
