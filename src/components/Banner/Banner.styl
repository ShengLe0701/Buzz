.Banner
  background: url('../../images/main.png')
  background-attachment: fixed;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
  display: flex;
  flex-direction: column;
  width: 100%
  margin-top: 0
  height: 80vh
  position: relative;
  &.notHome
    display: none

  .content
    box-sizing: border-box;
    position: relative;
    top: 30%
    left: 0;
    right: 0;
    margin: 25px auto;
    max-width: 1100px;
    width: 90%
    z-index: 1

  img
    position: absolute;

  .texts-holder
    width: 650px;
    text-align: left;
    color: #fff
    top: 200px
      h3
        font-size: 3.2em;
        font-weight: 500;
        margin-bottom: 0
      p
        margin-top: 0
        padding-right: 100px;
        font-size: 1.5em;
        line-height: 1.5em;

    @media screen and (max-width: 800px)
      height: 80vh;
      background-attachment: initial
      .content

      .texts-holder
        width: 100%
        text-align: center
        p
          font-size: 1em
          padding-right: 0
        h3
          font-size: 2.1em
