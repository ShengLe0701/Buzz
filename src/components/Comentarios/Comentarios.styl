#Comentarios
  display: flex;
  flex-direction: column;
  margin: 20px 0
  margin-top: 0
  box-sizing: border-box;
  line-height: 1em
  position: relative;

  .nome
    color: #212121
    font-size: 1.2em
    margin-left: 7px
    line-height: 1.9em

  .posts-holder
    margin-top: 25px;
    padding: 15px 25px;
    background-color: #fff;
    border: 1px solid rgba(0, 0, 0, .09);
    border-radius: 2px;
    position: relative;

  .delete-icon
    font-size: 10px
    position: absolute!important;
    bottom: 5px
    right: 5px

  .post-comment-holder
    margin-top: 35px;
    padding: 25px;
    height: auto;
    background-color: #fff
    min-height: 120px
    border: 1px solid rgba(0, 0, 0, .09);
    border-radius: 2px;
    position: relative;

    .input-icon
      display: flex;
      width: 100%;
      margin-bottom: 20px
      position: relative;
      .counter
        position: absolute;
        right: 0;
        bottom: 6px;
        font-size: 0.8em
        color: #727272

    img
      margin-bottom: 0
  .posts-holder
    .user-details
      cursor: pointer;
      .data
        color: #727272
        font-size: 0.73em
      .nome
        margin-left: 0
      .info
        display: flex
        flex-direction: column;
        margin-left: 10px
    .comentario-holder
      width: 100%
      display: block
      overflow: hidden;
      margin-bottom: 30px
  .user-details
    display: flex
    margin-bottom: 25px
    .nome
      font-size: 1.05em
      margin-left 10px
    img
      margin: auto 0
