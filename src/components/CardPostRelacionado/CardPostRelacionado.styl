.CardPostRelacionado
  display: flex;
  flex-direction: column;
  width: 100%
  height: 275px
  background-color: indigo
  color: #fff
  position: relative;
  justify-content: center;
  text-align: center;
  margin: 0 5px;
  &:first-child
    margin-left: 0
  &:last-child
    margin-right: 0

  .img-holder
    position: absolute;
    top: 0
    cursor: pointer;
  .post-image
    background-position: center!important;
    background-size: cover!important;
    width: 100%
    height: 50%

  img
    width: 100%
    height: 100%

  .shares
    position: absolute;
    top: 70px
    left: 0
    right: 0
    font-size: 1.05em;
    font-weight: 400;

  .legenda-holder
    display: flex
    flex-direction: column;
    text-align: left
    line-height: 1.3em
    background-color: #FFFFFF
    bottom: 0;
    height: 50%
    padding: 15px 12px;
    position: absolute;
    box-sizing: border-box;
    width: 100%;
    cursor: pointer;
    justify-content: space-between;
    .titulo
      text-transform: capitalize
      font-size: 1.15em;
      font-weight: 500
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      max-width: 100%;
      overflow: hidden;
      text-overflow: ellipsis;
      // height:56px /* fallback */

    .autor
      display: flex
      justify-content: space-between;
      .left
        overflow: hidden;
        display: flex
        line-height: 1.2em
        img
          margin-bottom: 0
      .right
        overflow: hidden;
        display: flex
        line-height: 1.6em
      span
        margin 0px 5px 5px 5px
        font-size: 0.95em
        color: #212121
        cursor: pointer;

  @media screen and (max-width: 800px)
    margin: 5px auto !important;
    width: 100%
