.CardPostGrande
  display: flex;
  width: 100%
  height: auto
  background-color: red
  color: #fff
  position: relative;
  justify-content: center;
  text-align: center;
  border-radius: 2px;
  margin: 45px 0;
    .post-image
      background-position: center!important;
      background-size: cover!important;
      width: 100%
      min-height: 185px
      cursor: pointer;
      margin: 30px 0
    .content
      width: 100%
      background-color: #fff
      height: auto;
      flex-direction: column;
      padding: 20px 30px
      box-sizing: border-box;
      color: #212121
      text-align: left
      .details-holder
        height: 50px
      .tags-holder
        span
          position: relative;
          margin-right: 7px
          top: 25px
          color: gray
          font-size: 0.85em
          cursor: pointer;
      .icons-holder
        position: absolute;
        bottom: 8px
        right: 8px
      .credits-holder
        display: flex
        margin-bottom: 20px
        cursor: pointer;
          .info
            display: flex;
            flex-direction: column;
            text-align: left;
            span
              font-size: 0.9em
              margin: 0
              margin-left: 10px
            .date
              font-size: 0.75em
              color: gray

      .title-holder
        span
          cursor: pointer;
          font-size: 1.45em
          font-weight: 600
          padding-bottom: 16px
      .title-holder:after
        display: block
        content: '';
        border-bottom: 2px solid #3b3b3b;
        width: 18%;
        position: relative;
        top: 15px
      .text-holder
        margin-top: 25px
        text-align: left;
        cursor: pointer;
        p, span
          display: -webkit-box;
          -webkit-line-clamp: 2;
          -webkit-box-orient: vertical;
          overflow: hidden;
          text-overflow: ellipsis;
          max-width: 100%;
          font-size: 0.8em
          line-height: 1.55em
        span
          color: rgba(0,0,0,.44)
          &:hover
            color: rgba(0,0,0,.6)

      @media screen and (max-width: 800px)
        width: auto
        margin: 25px 0
